<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:scrollbars="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTaskName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:gravity="center"
            android:text="Добавить Типографию"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSaveTyp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:text="Сохранить"
            android:textSize="18sp"
            android:layout_marginEnd="18dp"
            />



    </FrameLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            >

            <FrameLayout
                android:id="@+id/flHood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHood"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Район"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/etHood"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:hint="Район"
                    android:textSize="18sp"
                    android:layout_gravity="end"

                    />

            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <FrameLayout
                android:id="@+id/flName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Название"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:hint="Название"
                    android:textSize="18sp"
                    android:layout_gravity="end"

                    />

            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <FrameLayout
                android:id="@+id/flPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Телефон"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:hint="+79312234568"
                    android:textSize="18sp"
                    android:layout_gravity="end"

                    />

            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <FrameLayout
                android:id="@+id/flYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Год"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/etYear"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:hint="Год"
                    android:textSize="18sp"
                    android:layout_gravity="end"

                    />

            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <FrameLayout
                android:id="@+id/flType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Тип Соб."
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <Spinner
                    android:id="@+id/spnType"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:hint="сотрудник"
                    android:textSize="18sp"
                    android:layout_gravity="end"

                    />

            </FrameLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


        </LinearLayout>

    </ScrollView>




</LinearLayout>